<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nemesis.materialchess"
    android:installLocation="auto"
    android:versionCode="4"
    android:versionName="Beta 1.2">

    <uses-sdk android:minSdkVersion="14" />
    <!--
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeGreen">
        <activity
            android:name="org.empyrn.darkknight.ChessTastic"
            android:configChanges="orientation"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.empyrn.darkknight.EditBoard"
            android:configChanges="orientation"
            android:label="Edit Board" />
        <activity
            android:name="org.empyrn.darkknight.LoadPGN"
            android:configChanges="orientation"
            android:label="Load PGN game" />
        <activity
            android:name="org.empyrn.darkknight.pdfActivity"
            android:label="@string/Analyze"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name="org.empyrn.darkknight.Generation_Activity"
            android:label="@string/title_activity_generation_"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>